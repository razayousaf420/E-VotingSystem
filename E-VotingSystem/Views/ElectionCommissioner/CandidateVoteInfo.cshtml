@model ModCanidateResultDataSet

@{
    ModCanidateResultDataSet l_ModCanidateResultDataSet = new ModCanidateResultDataSet();
    l_ModCanidateResultDataSet = Model;

    List<ModRptCandidateResult> l_ListModRptCandidateResult_Local = new List<ModRptCandidateResult>();
    l_ListModRptCandidateResult_Local = l_ModCanidateResultDataSet.ListModRptCandidateResult_Local;

    List<ModRptCandidateResult> l_ListModRptCandidateResult_Executive = new List<ModRptCandidateResult>();
    l_ListModRptCandidateResult_Executive = l_ModCanidateResultDataSet.ListModRptCandidateResult_Executive;
}

<style>
    /* Custom styles for the table */
    .table {
        width: 100%;
        width: 100%; /* Set a maximum width for the table */ 
        margin: 0 auto; /* Center the table horizontally */
        border-collapse: collapse; /* Collapse table borders */
    }

        .table th, .table td {
            padding: 10px; /* Cell padding */
            text-align: left; /* Cell text alignment */
        }

        .table th {
            background-color: black; /* Header background color */
            color: white; /* Header text color */
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f2f2f2; /* Background color for odd rows */
        }

        .table tbody tr:nth-child(even) {
            background-color: #CCCCCC; /* Background color for even rows */
        }

    /* Custom style for the h1 heading */
    h1 {
        font-size: 24px;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Custom style for the table caption (optional) */
    .caption {
        text-align: center;
        font-style: italic;
        color: #888;
    }

    /*YOUSAF */
    .rounded-image {
        border-radius: 50%;
        width: 40px; /* Set the desired width */
        height: 40px; /* Set the desired height */
    }

    .center-cell {
        vertical-align: middle;
        /*  text-align: center;  */ /* Optional: horizontally center the text */
    }

    .table-link {
        cursor: pointer;
        text-decoration: underline;
        color: inherit;
        font-weight: bold;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="style.css">
</head>

<body style="background: #ecf0f3;">
    <div class="container mt-4">
    <h1>EXECUTIVE CANDIDATE RESULT</h1>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Sr#</th>
                <th>Image</th>
                <th>Candidate ID</th>
                <th>Candidate Name</th>
                <th>Region</th>
                <th>Vote Count</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ModRptCandidateResult l_ModRptCandidateResult in l_ListModRptCandidateResult_Executive)
            {
                <tr>
                    <td class="center-cell">@l_ModRptCandidateResult.SrNo</td>
                    <td>
                        <img src="~/images/@l_ModRptCandidateResult.Image" alt="Image" class="rounded-image">
                    </td>
                    <td class="center-cell">@l_ModRptCandidateResult.CandidateID</td>
                    <td class="center-cell">@l_ModRptCandidateResult.CandidateName</td>
                    <td class="center-cell">@l_ModRptCandidateResult.Region</td>
                    <td class="center-cell">@l_ModRptCandidateResult.VoteCount</td>
                    <td class="center-cell">
                        <a class="table-link" href="@Url.Action("CandidateVoteInfoDetailExecutive", "ElectionOfficials", new { PKGUID = l_ModRptCandidateResult.PKGUID })">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <br />
    <br />
    <br />

    <h1>LOCAL CANDIDATE RESULT</h1>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Sr#</th>
                <th>Image</th>
                <th>Candidate ID</th>
                <th>Candidate Name</th>
                <th>Region</th>
                <th>Vote Count</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>

            @foreach (ModRptCandidateResult l_ModRptCandidateResult in l_ListModRptCandidateResult_Local)
            {
                <tr>
                    <td class="center-cell">@l_ModRptCandidateResult.SrNo</td>
                    <td>
                        <img src="~/images/@l_ModRptCandidateResult.Image" alt="Image" class="rounded-image">
                    </td>
                    <td class="center-cell">@l_ModRptCandidateResult.CandidateID</td>
                    <td class="center-cell">@l_ModRptCandidateResult.CandidateName</td>
                    <td class="center-cell">@l_ModRptCandidateResult.Region</td>
                    <td class="center-cell">@l_ModRptCandidateResult.VoteCount</td>
                    <td class="center-cell">
                        <a class="table-link" href="@Url.Action("CandidateVoteInfoDetailLocal", "ElectionOfficials", new { PKGUID = l_ModRptCandidateResult.PKGUID })">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</body>
</html>
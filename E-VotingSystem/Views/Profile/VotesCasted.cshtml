@model ModMember
@{
    bool IsVotesCastedExecutive = Model.IsVotesCastedExecutive;
    bool IsVotesCastedLocal = Model.IsVotesCastedLocal;
}

@* UI For Logout *@
@if (IsVotesCastedExecutive == true && IsVotesCastedLocal == true)
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/castvotestyle.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/images/background.webp" asp-append-version="true" />
    </head>

    <body style="background: #ecf0f3;">
        <br />
        <br />
        <br />
        <br />
        <br />

        <div class="container mt-5">
            <div class="card text-white bg-dark mb-3" style="max-width: 40rem; margin: 0 auto;">
                <div class="card-header bg-primary text-white">
                    <strong>Vote Casted</strong>
                </div>
                <div class="card-body">
                    <h1 class="card-text" style="color:ghostwhite">Voting Process Completed.</h1>

                    <div class="text-left">
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button class="btn btn-primary btn-block">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <br />
        <br />
        <br />
        <br />
        <br />



    </body>
    </html>
}

@* UI For Executive *@
@if (IsVotesCastedExecutive == true && IsVotesCastedLocal == false)
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/castvotestyle.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/images/background.webp" asp-append-version="true" />
    </head>

    <body style="background: #ecf0f3;">
        <br />
        <br />
        <br />
        <br />
        <br />

        <div class="container mt-5">
            <div class="card text-white bg-dark mb-3" style="max-width: 40rem; margin: 0 auto;">
                <div class="card-header bg-primary text-white">
                    <strong>Vote Casted</strong>
                </div>
                <div class="card-body">        
                    <h2 class="card-text" style="color:ghostwhite">Your executive votes are in.</h2>
                    <p class="card-text" style="color:ghostwhite">Thank you for participating in the voting process. Now cast your local votes.</p>

                    <div class="text-left">
                        <form method="get" asp-controller="Profile" asp-action="Local">
                            <button class="btn btn-primary btn-block">Cast Local Votes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <br />
        <br />
        <br />
        <br />
        <br />



    </body>
    </html>
}

@* UI For Local *@
@if (IsVotesCastedLocal == true && IsVotesCastedExecutive == false)
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/castvotestyle.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/images/background.webp" asp-append-version="true" />
    </head>

    <body style="background: #ecf0f3;">
        <br />
        <br />
        <br />
        <br />
        <br />

        <div class="container mt-5">
            <div class="card text-white bg-dark mb-3" style="max-width: 40rem; margin: 0 auto;">
                <div class="card-header bg-primary text-white">
                    <strong>Vote Casted</strong>
                </div>
                <div class="card-body">
                    <h2 class="card-text" style="color:ghostwhite">Your local votes are in.</h2>
                    <p class="card-text" style="color:ghostwhite">Thank you for participating in the voting process. Now cast your executive votes.</p>
                  
                    <div class="text-left">
                        <form method="get" asp-controller="Profile" asp-action="Executive">
                            <button class="btn btn-primary btn-block">Cast Executive Votes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <br />
        <br />
        <br />
        <br />
        <br />


    </body>
    </html>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>OTP Verification</title>

    <!-- Bootstrap 5 CDN Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS Link -->
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/css/OTPstyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/font-awesome.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/images/bg.jpg" asp-append-version="true" />


    <!-- Include Firebase SDK scripts -->
    <script src="https://www.gstatic.com/firebasejs/8.9.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.9.1/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.9.1/firebase-messaging.js"></script>

    <!-- Your custom JavaScript code that uses Firebase -->
    <script src="/js/OTPVerification.js"></script>


    <script type="module">
        // Initialize Firebase
        const firebaseConfig = {
            apiKey: "AIzaSyBCiDeLF9BkoUt9hxlNcgzLOBgncI9EVmc",
            authDomain: "hvacrotp.firebaseapp.com",
            projectId: "hvacrotp",
            storageBucket: "hvacrotp.appspot.com",
            messagingSenderId: "740646354946",
            appId: "1:740646354946:web:250d743f82d691685c271b",
            measurementId: "G-ERLHHQW6CT"
        };

        firebase.initializeApp(firebaseConfig);

    </script>

</head>
<body>

    <section class="wrapper">
        <br />
        <br />
        <div class="container">
            <div class="col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 col-xl-6 offset-xl-3 text-center">

                <form class="rounded bg-white shadow p-5">
                    <h3 class="text-dark fw-bolder fs-4 mb-4">TWO STEP VERIFICATION</h3>


                    <div style="
                        text-align: center;
                        margin: 0em auto;
                        position: relative;
                        box-sizing: border-box;
                        width: 100px;
                        height: auto;
                        ">
                        <img src="~/images/VotingLogo.webp" alt="Logo">
                    </div>

                    <div class="form-group text-muted mb-4">
                        <br />
                        <label for="verification-code" class="text-dark fw-bolder fs-4 mb-4">OFFICIAL MOBILE</label>
                        <input type="text" id="number" class="form-control placeholder-input" placeholder="+923---------" value="@Model.Mobile" readonly>


                        <div id="recaptcha-container" class="d-flex justify-content-center align-items-center mt-4"></div>


                        <button type="button" onclick="phoneAuth()" class="btn btn-primary submit_btn my-4" style="background:black">SEND OTP</button>
                    </div>

                    <div class="otp_input text-start mb-4">
                        <label for="digit">TYPE YOUR 6 DIGIT SECURITY CODE</label>
                        <div class="d-flex align-items-center justify-content-between mt-2">
                            <input type="text" class="form-control1" placeholder="" maxlength="1" oninput="moveFocusToNext(event, this)">
                            <input type="text" class="form-control2" placeholder="" maxlength="1" oninput="moveFocusToNext(event, this)">
                            <input type="text" class="form-control3" placeholder="" maxlength="1" oninput="moveFocusToNext(event, this)">
                            <input type="text" class="form-control4" placeholder="" maxlength="1" oninput="moveFocusToNext(event, this)">
                            <input type="text" class="form-control5" placeholder="" maxlength="1" oninput="moveFocusToNext(event, this)">
                            <input type="text" class="form-control6" placeholder="" maxlength="1" oninput="moveFocusToNext(event, this)">
                        </div>
                    </div>
                    <button type="button" onclick="verifyOTPOfficial()" class="btn btn-primary submit_btn my-4" style="background:black">VERIFY</button>
                </form>
            </div>
        </div>
    </section>

    <script>
        function moveFocusToNext(event, currentInput) {
            if (currentInput.value.length === currentInput.maxLength) {
                const nextInput = currentInput.nextElementSibling;
                if (nextInput) {
                    nextInput.focus();
                }
            }
        }
    </script>

</body>
</html>